<link href="~/css/SignUp.css" rel="stylesheet" />

<title>
    Sign up
</title>

<div class="container">
    <div class="header-container">
        <span class="header-1">
            WAGURI Account
        </span>
        <span class="header-2">
            Sign up
        </span>
    </div>

    <div class="form-container">
        <div class="form-group">
            <span class="label">
                first name
            </span>
            <input class="textbox" type="text" />
        </div>

        <div class="form-group">
            <span class="label">
                last name
            </span>
            <input class="textbox" type="text" />
        </div>

        <div class="form-group">
            <span class="label">
                email id
            </span>
            <input class="textbox" type="text" />
        </div>

        <div class="form-group">
            <span class="label">
                password
            </span>
            <input class="textbox" type="password" />
        </div>

        <div class="form-group">
            <span class="label">
                check password
            </span>
            <input class="textbox" type="password" />
        </div>

        <button class="secondary-btn">
            continue
        </button>
    </div>

</div>